# Nginx configuration for Text2Trait Training Data Builder
# Place this in /etc/nginx/sites-available/ and symlink to sites-enabled

upstream t2t_backend {
    server 127.0.0.1:5001;
    keepalive 64;
}

upstream t2t_frontend {
    server 127.0.0.1:8050;
    keepalive 64;
}

server {
    listen 80;
    listen [::]:80;
    server_name your-domain.com;

    # Redirect HTTP to HTTPS (uncomment when SSL is configured)
    # return 301 https://$server_name$request_uri;

    client_max_body_size 16M;

    # Logging
    access_log /var/log/nginx/t2t-access.log;
    error_log /var/log/nginx/t2t-error.log;

    # Frontend application
    location / {
        proxy_pass http://t2t_frontend;
        proxy_http_version 1.1;

        # WebSocket support for Dash callbacks
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Standard proxy headers
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;

        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Buffering
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;
    }

    # Backend API
    location /api/ {
        proxy_pass http://t2t_backend;
        proxy_http_version 1.1;

        # Standard proxy headers
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;

        # Extended timeout for PDF downloads
        proxy_connect_timeout 90s;
        proxy_send_timeout 90s;
        proxy_read_timeout 90s;

        # Disable buffering for streaming responses
        proxy_buffering off;
        proxy_request_buffering off;
    }

    # Static assets (if any)
    location /assets/ {
        proxy_pass http://t2t_frontend;
        proxy_http_version 1.1;
        proxy_set_header Host $http_host;

        # Cache static assets
        expires 1h;
        add_header Cache-Control "public, immutable";
    }

    # Health check endpoint
    location /health {
        proxy_pass http://t2t_backend/api/health;
        access_log off;
    }
}

